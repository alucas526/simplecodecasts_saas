<%= form_for @profile, url: user_profile_path, html: { multipart: true } do |f| %>
    <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :avatar %>
        <% if current_user.profile %>
            <% if @profile.avatar_file_name = nil %>
                <%= f.file_field :avatar, class: 'form-control' %>
            <% else %>
                <br />
                <%= image_tag current_user.profile.avatar.url(:thumb), class: "user-avatar-community" %>
                <%= f.file_field :avatar, class: 'form-control' %>
            <% end %>
        <% else %>
            <%= f.file_field :avatar, class: 'form-control' %>
        <% end %>
    </div>
    <div class="form-group">
        <%= f.label :job_title %>
        <%= f.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :contact_email %>
        <%= f.text_field :contact_email, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
        <% if current_user.profile %>
            <%= f.submit "Update Profile", class: 'btn btn-primary' %>
        <% else %>
            <%= f.submit "Create Profile", class: 'btn btn-primary' %>
        <% end %>
        
    </div>
    
<% end %>
